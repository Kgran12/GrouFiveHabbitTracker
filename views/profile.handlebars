<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Goal:</h3>

    <form class="form new-goal-form">
      <div class="form-group">
        <label for="goal-name">Goal Name</label>
        <input class="form-input" type="text" id="goal-name" name="goal-name" />
      </div>
      <div class="form-group">
        <label for="goal-desc">Describe what goal you would like to accomplish</label>
        <textarea class="form-input" id="goal-desc" name="goal-desc"></textarea>
      </div>
       <div class="form-group">
        <label for="goal-completed">What Strategies Will You Use to Complete the Goal?</label>
        <input class="form-input" type="text" id="goal-completed" name="goal-funding" />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if goals.length}}
  <div class="col-md-6" id="goal-list">
    <h3>Current goals:</h3>

    {{#each goals as |goal|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/goal/{{goal.id}}">{{goal.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{goal.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
